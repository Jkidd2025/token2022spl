{
  "name": "token2022spl",
  "version": "1.0.0",
  "description": "SPL Token 2022 implementation with extensions, rewards, and burns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start": "ts-node src/scripts/createToken.ts",
    "create-token": "ts-node src/scripts/createToken.ts",
    "initial-mint": "ts-node src/scripts/initialMint.ts",
    "burn": "ts-node src/scripts/burnTokens.ts",
    "distribute-rewards": "ts-node src/scripts/distributeRewards.ts",
    "distribute-wbtc": "ts-node src/scripts/distributeWBTC.ts",
    "auto-distribute": "ts-node src/scripts/automatedDistribution.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "keywords": [
    "solana",
    "spl-token-2022",
    "blockchain",
    "token",
    "cryptocurrency"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@solana/buffer-layout": "^4.0.1",
    "@solana/spl-token": "^0.3.11",
    "@solana/spl-token-metadata": "^0.1.6",
    "@solana/web3.js": "^1.98.0",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
